<svg xmlns="http://www.w3.org/2000/svg" version="1.1" height="<%= @words.count * 17 %>">
  <% @last = 0 %>
  <% @words.each do |word, count| %>
    <% last = @last %>
    <rect x="0" y="<%= last %>" width="<%= count * 2%>" height="15" fill="gray"/>
    <text x="<%= (count * 2) + 2 %>" y="<%= last + 11 %>" fill="black"><%= word %></text>
    <% @last += 17 %>
  <% end %>
</svg>