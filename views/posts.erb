<svg xmlns="http://www.w3.org/2000/svg" version="1.1" height="<%= @all.count * 17 %>">
  <% @last = 0 %>
  <% @all.each do |post| %>
    <% size = post.comments.count * 2 %>
    <% last = @last %>
    <rect x="0" y="<%= last %>" width="<%= size %>" height="15" fill="gray"/>
    <text x="<%= size + 4 %>" y="<%= last + 11 %>" fill="black"><%= post.title %></text>
    <% @last += 17 %>
  <% end %>
</svg>